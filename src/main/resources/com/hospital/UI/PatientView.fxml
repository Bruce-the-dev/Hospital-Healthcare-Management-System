<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.hospital.Controller.PatientController">

    <VBox spacing="10">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>
        <Label text="Patient Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- Form -->
        <GridPane hgap="10" vgap="10">
            <Label text="First Name:"/>
            <TextField fx:id="firstNameField" GridPane.columnIndex="1"/>

            <Label text="Last Name:" GridPane.rowIndex="1"/>
            <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Gender:" GridPane.rowIndex="2"/>
            <ComboBox fx:id="genderBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Date of Birth:" GridPane.rowIndex="3"/>
            <DatePicker fx:id="dobPicker" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Phone:" GridPane.rowIndex="4"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="Email:" GridPane.rowIndex="5"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        </GridPane>

        <!-- Buttons -->
        <HBox spacing="10">
            <Button text="Add" onAction="#handleAdd"/>
            <Button text="Update" onAction="#handleUpdate"/>
            <Button text="Delete" onAction="#handleDelete"/>
            <Button text="Clear" onAction="#handleClear"/>
        </HBox>

        <!-- Search -->
        <TextField fx:id="searchField" promptText="Search by last name"/>
        <Button text="Search" onAction="#handleSearch"/>

        <!-- Table -->
        <TableView fx:id="patientTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" text="ID"/>
                <TableColumn fx:id="firstNameCol" text="First Name"/>
                <TableColumn fx:id="lastNameCol" text="Last Name"/>
                <TableColumn fx:id="genderCol" text="Gender"/>
                <TableColumn fx:id="dobCol" text="DOB"/>
                <TableColumn fx:id="phoneCol" text="Phone"/>
                <TableColumn fx:id="emailCol" text="Email"/>
            </columns>
        </TableView>

    </VBox>
</ScrollPane>