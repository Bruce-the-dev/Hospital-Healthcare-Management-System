<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hospital.Controller.InventoryController"
      spacing="10"
      alignment="TOP_CENTER">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Title -->
    <Label text="Inventory Management"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- TableView -->
    <TableView fx:id="tblInventory" prefHeight="300" prefWidth="500">
        <columns>
            <TableColumn fx:id="colMedication" text="Medication" prefWidth="200"/>
            <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="colLastUpdated" text="Last Updated" prefWidth="200"/>
        </columns>
    </TableView>

    <!-- Form for adding/reducing stock -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Medication:"/>
        <ComboBox fx:id="cmbMedication" prefWidth="200"/>

        <Label text="Quantity:"/>
        <TextField fx:id="txtQuantity" promptText="Enter quantity" prefWidth="100"/>

        <Button fx:id="btnAddStock" text="Add Stock"/>
        <Button fx:id="btnReduceStock" text="Reduce Stock"/>
    </HBox>

</VBox>
