<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.hospital.Controller.LandingController">


<VBox spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text text="Hospital Management System"  style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Button text="Manage Departments" onAction="#openDepartmentPage" prefWidth="250"/>
    <Button text="Manage Doctors" onAction="#openDoctorPage" prefWidth="250"/>
    <Button text="Manage Patients" onAction="#openPatientPage" prefWidth="250"/>
    <Button text="Manage Appointments" onAction="#openAppointmentPage" prefWidth="250"/>
</VBox>
</ScrollPane>
