<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.hospital.Controller.MedicationController">

    <top>
        <Label text="Medication Management"
               style="-fx-font-size: 20px; -fx-padding: 10;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="tblMedication">
            <columns>
                <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                <TableColumn fx:id="colDescription" text="Description" prefWidth="400"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10" >
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
            <TextField fx:id="txtName" promptText="Medication name"/>
            <TextArea fx:id="txtDescription" promptText="Description" prefRowCount="2"/>
            <Button text="Add Medication" onAction="#handleAddMedication"/>
        </VBox>
    </bottom>

</BorderPane>
